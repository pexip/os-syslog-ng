%code top {
#include "pseudofile-parser.h"

}


%code {

#include "pseudofile-grammar.h"
#include "pseudofile.h"
#include "cfg-parser.h"
#include "syslog-names.h"
#include "messages.h"
#include "cfg-grammar.h"

extern LogDriver *last_driver;

}

%name-prefix "pseudofile_"

/* this parameter is needed in order to instruct bison to use a complete
 * argument list for yylex/yyerror */

%lex-param {CfgLexer *lexer}
%parse-param {CfgLexer *lexer}
%parse-param {LogDriver **instance}
%parse-param {gpointer arg}

/* INCLUDE_DECLS */

%type   <ptr> dest_pseudofile

%token KW_PSEUDOFILE

%%

start
	: LL_CONTEXT_DESTINATION dest_pseudofile			 { *instance = $2; YYACCEPT; }
        ;

dest_pseudofile
	: KW_PSEUDOFILE 
          '(' string						{ last_driver = pseudofile_dd_new($3, configuration); free($3); }
	  pseudofile_opts
	  ')'							{ $$ = last_driver; }
	;

pseudofile_opts
	: pseudofile_opt pseudofile_opts
	|
	;

pseudofile_opt
	: KW_TEMPLATE '(' template_content ')'			{ pseudofile_dd_set_template(last_driver, $3); }
	| { last_template_options = pseudofile_dd_get_template_options(last_driver); } template_option
	;

/* INCLUDE_RULES */

%%
